<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="111dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"

        android:src="@drawable/dct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Dr.Robin"
        android:textColor="#c1cdc1"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Physician"
        android:textColor="#fff8dc"
        android:textSize="35sp"

        />


    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="104dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgDepartment"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="45dp"
            android:layout_marginTop="34dp"
            android:onClick="listview"
            android:src="@drawable/dpa" />

        <ImageView
            android:layout_width="59dp"
            android:layout_height="56dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/seraa"
            />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/stat"
            />


    </LinearLayout>

</LinearLayout>